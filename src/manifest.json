{
  "manifest_version": 3,
  "name": "X Visibility Helper",
  "version": "1.0",
  "description": "Colors X posts by comment visibility opportunity.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*", "*://*.x.com/*"],
      "js": ["content.js"]
    }
  ]
}